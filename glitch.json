{
  "install": "sh ~/init.sh",
  "start": "dotnet run",
  "watch": {
    "install": {
      "include": [ "^glitch\\.json$", "^init\\.sh$", "^\\.env$" ]
    },
    "restart": {
      "exclude": [ "^Views/", "^wwwroot/" ],
      "include": [ "\\.cs$", "^Website\\.csproj$" ]
    },
    "throttle": 100
  }
}